{
  "name": "kindfi",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "init": "bun install && bun husky:init && bun husky:prepare",
    "husky:init": "husky init",
    "husky:prepare": "husky prepare",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "clean": "git clean -xdf node_modules",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "husky"
  },
  "engines": {
    "bun": "1.x"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "packageManager": "bun@1.1.20",
  "workspaces": {
    "packages": [
      "apps/*",
      "services/*",
      "packages/*"
    ],
    "nohoist": [
      "**/cbw-sdk",
      "**/cbw-sdk/**",
      "**/wagmi",
      "**/pino-pretty",
      "**/wagmi/**",
      "**/pino-pretty/**"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
