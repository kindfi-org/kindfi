{
  "name": "kindfi",
  "version": "0.0.1",
  "scripts": {
    "dev": "bun run --watch index.ts",
    "init": "bun install && husky",
    "clean": "git clean -xdf node_modules",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "lint:staged": "biome check $(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')",
    "format": "prettier --write .",
    "format:staged": "prettier --write $(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')",
    "check": "bun run lint",
    "check:full": "bun run ci",
    "ci": "bun install --frozen-lockfile --no-cache && bun run lint"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "services/*",
      "packages/*"
    ],
    "version": "independent",
    "nohoist": [
      "**/supabase",
      "**/supabase/**",
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "engines": {
    "bun": "1.x"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "packageManager": "bun@1.1.20",
  "private": true,
  "dependencies": {}
}
