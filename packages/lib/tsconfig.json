{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": false,
		"outDir": "./dist",
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [],
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2017"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["**/*.ts", "**/*.tsx"]
}
