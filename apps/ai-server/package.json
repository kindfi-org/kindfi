{
	"name": "kindfi-ai-server",
	"description": "AI server using Bun, Express, Vercel AI SDK and HuggingFace API",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "bun --hot src/index.tsx",
		"start": "NODE_ENV=production bun src/index.tsx",
		"build": "bun build src/index.tsx --outdir=dist --format=cjs",
		"lint": "bun run eslint .",
		"lint:fix": "bun run eslint . --fix",
		"test": "bun test"
	},
	"dependencies": {
		"@ai-sdk/openai": "1.3.22",
		"ai": "4.3.15",
		"dotenv": "16.4.5",
		"zod": "^3.24.2",
		"express": "5.0.1"
	},
	"devDependencies": {
		"@types/express": "5.0.0",
		"@types/node": "20.17.24",
		"@types/bun": "latest"
	}
}
