{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"maxSize": 5000000,
		"ignore": [
			"./apps/web/.next",
			"./apps/academy-wep/.next",
			"./apps/indexer/src/types/models",
			"./apps/kyc-server/public",
			"**/dist/**",
			"**/build/**",
			"**/node_modules/**"
		]
	},
	"formatter": { "enabled": true, "indentStyle": "tab", "indentWidth": 2 },
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"recommended": true,
				"noYodaExpression": "error",
				"noNonNullAssertion": "warn",
				"noUselessElse": "error",
				"useForOf": "error",
				"useImportType": "error"
			},
			"correctness": {
				"recommended": true,
				"noEmptyPattern": "warn"
			},
			"suspicious": {
				"recommended": true,
				"noExplicitAny": "error"
			}
		}
	},
	"javascript": {
		"formatter": { "quoteStyle": "single", "semicolons": "asNeeded" }
	}
}
